<!--Lista con los momentaneos valores ingresados y form-->
<form action="/led" method="POST">
  <div class="grid grid-cols-1 grid-flow-row" id="lista">
    <input type="hidden" value="0" id="contador" name="contador" />
  </div>
  <button class="bg-red-500 w-36 text-center text-white p-2" type="submit">
    SEND DATE
  </button>
</form>

<!--Valores en base de datos-->
<div
  class="
    bg-blue-600
    rounded-md
    w-80
    backdrop-filter backdrop-opacity-80
    mx-auto
    py-6
    px-4
    justify-items-center
  "
>
  <div class="">
    <% for(var i in component){%>
    <div class="m-1 text-xl font-semibold grid grid-flow-col text-left">
      <% if(component[i].signal == "output"){ %>
      <p><%=component[i].signal%></p>
      <p><%=component[i].nameComponent%></p>
      <% if(component[i].state == "true"){ %>
      <input type="checkbox" checked />
      <%} else{%>
      <input type="checkbox" />
      <%}%>
      <p><%=component[i].pin%></p>
      <%} else{%>
      <p><%=component[i].signal%></p>
      <p><%=component[i].nameComponent%></p>
      <p><%=component[i].pin%></p>
      <%}%>
    </div>
    <% }%>
  </div>
</div>
